<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".adminNotificationsNotify">

    <!-- TODO: Update blank fragment layout -->

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminNotificationRecyclerView"
            android:padding="20dp"
            android:layout_above="@id/adminNotificationsNotifyTextInputLayout"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.Material3.Light"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusTopStart="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandedHintEnabled="false"
        app:hintEnabled="false"
        app:endIconDrawable="@drawable/baseline_send_24"
        app:endIconMode="custom"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/adminNotificationsNotifyTextInputLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="15"
            android:hint="Notification Title : Text"
            app:counterMaxLength="60"
            android:background="@drawable/send_notifications_background"
            android:id="@+id/adminNotificationsNotify"/>

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>