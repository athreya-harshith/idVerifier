<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".adminStudentAndStaff"
    tools:ignore="ExtraText">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/adminSAndSRecyclerView"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adminSAndSExtendedFloatingActionBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/baseline_add_24"
            android:text="Actions"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            />

    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/adminSAndSExtendedFloatingActionBtn"
        app:layout_constraintEnd_toEndOf="@+id/adminSAndSExtendedFloatingActionBtn"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_switch_account_24"
        app:fabSize="normal"
        android:id="@+id/adminSAndSFloatingActionBtnSwitchUser"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/adminSAndSFloatingActionBtnSwitchUser"
        app:layout_constraintEnd_toEndOf="@+id/adminSAndSFloatingActionBtnSwitchUser"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_person_add_24"
        android:id="@+id/adminSAndSFloatingActionBtnAddUser"/>





</androidx.constraintlayout.widget.ConstraintLayout>